{% if section.settings.use_slideshow %}
{% assign id = section.id %}
{% assign style_dots = section.settings.style_dots %}
{% liquid 
        assign section_blocks = section.blocks  
    	assign size = "1920x745"
    	assign no-img = "https://via.placeholder.com/1920x745.png/f5f5f5"
        assign no-img_mobile ="https://via.placeholder.com/480x480.png/f5f5f5"
    	assign index = 1 
        assign arr_blocks_img = section_blocks | where: "type", 'img'%}

<section class="laber_slidershow_{{id}}">
<div data-wrapper-slidershow class="{{section.settings.layout}}">
  <div class="laberSlidershow">
  <div data-js-slideshow class="js_carousel vertical-center {% if section.settings.fade_zoom %}fade_zoom{%endif%}" data-slick='{"fade":{{section.settings.fade_zoom}}, "slidesToShow": 1, "slidesToScroll":1, "lazyLoad": "ondemand", "autoplay": {{section.settings.use_slideshow_autoplay}}, "autoplaySpeed": "{{section.settings.autoplay_slide_time | times:1000}}", "arrows": {{section.settings.nav_enable}}, "dots":{{section.settings.dot_enable}}, "pauseOnHover":{{section.settings.pause_slide_hover}}, "infinite":{{section.settings.loop}}, "appendDots": ".appendDots"}'>
    {% if arr_blocks_img.size > 0 %}  
    	{%- for block in arr_blocks_img -%}
    		{% if block.type == 'img' %} 
    			{% assign image = block.settings.image_sl %}
    			{% assign image_mobile = block.settings.image_sl_mobile %}
    			{% assign url = block.settings.link_img %}
    			{% assign open_link = block.settings.open_link %} 
                <div id="laber_bock_{{block.id}}" class="wrap_slide js_image_slide">
                  <div  class="content-item" {{ block.shopify_attributes }}>                  
                    {% assign ratio = image.aspect_ratio |default:1.0 %}
                    {% assign pd_top = 1 | divided_by: ratio | times: 100 %}
                    
                    {% assign ratio_mobile = image_mobile.aspect_ratio |default:1.0 %}
                    {% assign pd_top_mobile = 1 | divided_by: ratio_mobile | times: 100 %}
                    <div class="lazyload laber_bg_lz pr_lazy_img image_pc" data-bgset="{% if image != blank %}{{ image | img_url: '1x1' }}{% else %}{{ no-img}}{% endif %}" data-ratio="{{ratio}}" data-sizes="auto" style="padding-top:{% if image != blank %} {{pd_top}}%{% else %} 600px{% endif %};" ></div>
                    <div class="lazyload laber_bg_lz pr_lazy_img image_mobile" data-bgset="{% if image_mobile != blank %}{{ image_mobile | img_url: '480x480' }}{% else %}{{ no-img_mobile}}{% endif %}" data-ratio="{{ratio_mobile}}" data-sizes="auto" style="padding-top:{% if image_mobile != blank %} {{pd_top_mobile}}%{% else %} 100%{% endif %};" ></div>
                    <div class="container wrap_text">
                      <div class="wrapper_caption flex h_{{block.settings.h_position}} v_{{block.settings.v_position}} text_{{block.settings.txt_align}}">

                        <div class="caption" style="color:{{block.settings.cl_overlay}}; opacity:{{block.settings.cl_opacity | times:10 }}">
                          <div class="outner-caption">
                            <div class="inner-caption">                            	
                              {% for block in section_blocks offset:index %}
                              {% assign index = index|plus:1 %}                            		
                              {%- case block.type -%}                                     
                              {% when 'subhd' %}
                                <h4 id="b_{{block.id}}"  class="slide_item_h4 laber-{{block.settings.text_animate}} {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}>
                                  {% assign somearray = block.settings.title | split: ' ' %}                             
                                  {% assign pos = block.settings.custom_mark %}
                                  {% assign index_mark  = 0 %}
                                  {% for item in somearray %}
                                  {% assign index_mark  = index_mark | plus: 1 %} 
                                  <span  class="{% if block.settings.first_mark and forloop.first %}first {% endif %}{% if pos contains index_mark %}marked{% endif %}{% if block.settings.last_mark and forloop.last %}last {% endif %}" > {{item}} </span>
                                  {% endfor %}   
                                </h4>
                              {% when 'hd' %}
                              <h3 id="b_{{block.id}}"  class="slide_item_h3 laber-{{block.settings.text_animate}} {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}>                             
                                {% assign somearray = block.settings.title | split: ' ' %} 
                                {% assign pos = block.settings.custom_mark %}
                                {% assign index_mark  = 0 %}
                                {% for item in somearray %}
                                {% assign index_mark  = index_mark | plus: 1 %} 
                                	<span  class="{% if block.settings.first_mark and forloop.first %}first {% endif %}{% if pos contains index_mark %}marked{% endif %}{% if block.settings.last_mark and forloop.last %}last {% endif %}" > {{item}} </span>
                                {% endfor %}                             
                              </h3>
                              {% when 'txt' %}
                              <div id="b_{{block.id}}"  class="slide_item_p laber-{{block.settings.text_animate}} {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}>{{block.settings.title}}</div> 
                              {% when 'btn' %}
                              {%- if  block.settings.title != blank -%}
                              	<a id="b_{{block.id}}" 
                                   class="buttons laber-{{block.settings.text_animate}}" href="{{block.settings.btn_link}}" 
                                   target="{{open_link}}"
                                   {{ block.shopify_attributes }}>{{block.settings.title}} {{block.settings.icon_button}}</a>	
                              {%- endif -%}
                              {% when 'space' %}
                              <div id="b_{{block.id}}" class="slide_item_space" {{ block.shopify_attributes }}></div>
                              {% when 'box' %}
                              <div id="b_{{block.id}}"  class="slide_item_box" {{ block.shopify_attributes }}>    
                                <div class="inner-box">
                                  <div class="outside-box">
                                    <div class="inside-box">
                                      <h2>{{block.settings.title}}</h2>
                                      <p>{{block.settings.content}}</p>
                                      {%- if block.settings.btn_link != blank and block.settings.button_text != blank -%}
                                      	<a href="{{block.settings.btn_link}}">{{block.settings.button_text}}</a>
                                      {% endif %}
                                    </div>
                                  </div>
                                </div>
                              </div>

                              {% else %}                            				
                              {%- break -%}
                              {%- endcase -%}
                              {%- endfor -%}
                            </div> 
                          </div>
                        </div>   

                      </div>

                    </div>
                  </div> 
                </div>
    		{% endif %}
    	{% endfor %}
      {% endif %} 
    
    </div>
  {% if section.settings.dot_enable %}
    <div class="wrapper-dots  {{style_dots}}">
      <div class="appendDots"></div>
    </div>
  {% endif %}  
    </div>
</div>
</section>


{% endif %}

{% style%}
	.laber_slidershow_{{id}}{
			{% if section.settings.margin_top_slidershow!=blank %}margin-top:{{section.settings.margin_top_slidershow}}px; {% endif %} 
			{% if section.settings.margin_bottom_slidershow !=blank %}margin-bottom:{{section.settings.margin_bottom_slidershow}}px; {% endif %} 
	}
    .laber_slidershow_{{id}}{
   	 	padding-left:{{section.settings.pd_left}}px;
  	  	padding-right:{{section.settings.pd_right}}px;
    }
	@media (max-width: 1366px) {
    	.laber_slidershow_{{id}}{
            padding-left:{{section.settings.pd_left_mobile}}px;
            padding-right:{{section.settings.pd_right_mobile}}px;
        }
    }
	@media (max-width: 1024px) {
      .laber_slidershow_{{id}}{
        {% if section.settings.margin_top_slidershow_mobile!=blank %}margin-top:{{section.settings.margin_top_slidershow_mobile}}px; {% endif %} 
        {% if section.settings.margin_bottom_slidershow_mobile !=blank %}margin-bottom:{{section.settings.margin_bottom_slidershow_mobile}}px; {% endif %}         
      }
    }
	@media (max-width: 640px) {
    .laber_slidershow_{{id}}{
            {% if section.settings.cl_bg %} background-color:{{section.settings.cl_bg}} {% endif %}
        }
    }

	{%- if section_blocks.size > 0 %}
        {%- for block in section_blocks -%}
        {%- assign id = block.id -%}
        {%- assign type = block.type -%}
            {%- case block.type -%} 
					{% when 'subhd' %}
                      .wrapper_caption #b_{{id}}.slide_item_h4{
                        text-transform:{{block.settings.text_transform}}; 
                        letter-spacing:{{block.settings.ls_text}}px;
                        {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                        font-size:{{block.settings.fs_text}}px; 
						padding:{{block.settings.pd}}; 
						border-radius:{{block.settings.br_button}};
                        color:{{block.settings.color}}; 
                        font-weight:{{block.settings.fw_text}}; 
						background-color:{{block.settings.bg_text}};
                      }
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.slide_item_h4{
							font-size:{{block.settings.mobile_font_text}}px;
							font-weight:{{block.settings.mobile_fw_text}}; 
                          }
                        }
					{% when 'hd' %}
						.wrapper_caption #b_{{id}}.slide_item_h3 {
                          text-transform:{{block.settings.text_transform}}; 
                          letter-spacing:{{block.settings.ls_text}}; 
                          {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                          font-size:{{block.settings.fs_text}}px; 
                          color:{{block.settings.color}}; 
                          
						  {%if block.settings.use_fonts %}
								{%if block.settings.f_weight_d == 'regular' %}
									font-family: monumentextended-regular;
								{%else%}
									font-family: monumentextended-ultrabold;
								{%endif%}
								font-weight: normal;
						  {%else%}
							font-weight:{{block.settings.fw_text}};
						  {%endif%}	
						}
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.slide_item_h3{
								font-weight:{{block.settings.mobile_fw_text}};
								{% if block.settings.mobile_lh_text >0 %}line-height:{{block.settings.mobile_lh_text}}px; {% endif %} 	
								font-size:{{block.settings.mobile_font_text}}px; 
                          }
                        }
				  {% when 'txt' %}
						.wrapper_caption #b_{{id}}.slide_item_p{
							margin:0px; 
							letter-spacing:{{block.settings.ls_text}}; 
							{% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
							font-size:{{block.settings.fs_text}}px; 
							color:{{block.settings.color}}; 
							font-weight:{{block.settings.fw_text}};
						}
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.slide_item_p{
								font-size:{{block.settings.mobile_font_text}}px;
								font-weight:{{block.settings.mobile_fw_text}};
                          }
                        }
				  {% when 'btn' %}
                        .wrapper_caption #b_{{id}}.buttons{
							margin:{{block.settings.mg}}; 
                          padding:{{block.settings.pd}}; 
                          background-color: {{block.settings.cl_bg}}; 
                          color:{{block.settings.cl_txt}}; 
                          font-size:{{block.settings.fs_text}}px; 
                          font-weight:{{block.settings.fw_text}};
                          border-radius:{{block.settings.br_button}};
                          text-transform:{{block.settings.button_transform}};
                          letter-spacing:{{block.settings.ls_text}}px;
						  border:2px solid {{block.settings.cl_bg_border}}	
                        } 
                        .wrapper_caption #b_{{block.id}}.buttons:hover{
                          background-color:{{block.settings.cl_bg_hover}}; 
                          color:{{block.settings.cl_txt_hover}};
						  border-color:{{block.settings.cl_bg_border_hover}};
                        }
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.buttons{
                            margin:{{block.settings.mobile_mg}}; 
                            padding:{{block.settings.mobile_pd}};
                            font-size:{{block.settings.mobile_font_text}}px;		
                            font-weight:{{block.settings.mobile_fw_text}};
                          }	
                        }
				  {% when 'space' %}
					.wrapper_caption #b_{{block.id}}.slide_item_space{
						height:{{block.settings.sp}}px
					}
                    @media (max-width: 1024px) {
						.wrapper_caption #b_{{block.id}}.slide_item_space{
							height:{{block.settings.mobile_sp}}px
                        }
                    }
				{% when 'box' %}
					.wrapper_caption #b_{{block.id}}.slide_item_box .inside-box h2{
						text-transform:{{block.settings.title_transform}}; 
                        letter-spacing:{{block.settings.ls_title}}; 
                        {% if block.settings.lh_title >0 %}line-height:{{block.settings.lh_title}}px; {% endif %} 
                        font-size:{{block.settings.fs_title}}px; 
                        color:{{block.settings.color}}; 
                        font-weight:{{block.settings.fw_title}};
                    }
					.wrapper_caption #b_{{block.id}}.slide_item_box .inside-box  p{
                        text-transform:{{block.settings.contennt_transform}}; 
                        letter-spacing:{{block.settings.ls_text}}; 
                        {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                        font-size:{{block.settings.fs_text}}px; 
                        color:{{block.settings.color_content}}; 
                        font-weight:{{block.settings.fw_text}};
                    }
					.wrapper_caption #b_{{block.id}}.slide_item_box .inside-box  a{
                        text-transform:{{block.settings.btn_transform}}; 
                        letter-spacing:{{block.settings.ls_btn}}px;  
                        font-size:{{block.settings.fs_text_btn}}px; 
                        background-color:{{block.settings.cl_bg_btn}}; 
                        color:{{block.settings.cl_btn}}; 
						font-weight:{{block.settings.fw_text_btn}};
					}
            {%endcase%}
			
    	{%endfor%}
    {%- endif- %}

{% endstyle%}
{% schema %}
  {
    "name": "Slideshow",   
	"max_blocks": 50,
	"class":"slideshow",
    "settings": [
		{
          "type": "header","content": "== Slider Settings"
        },
        {
          "type": "checkbox",
          "id": "use_slideshow",
          "label": "Show slideshow",
          "default": true
        },
	    {
          "type": "checkbox","id": "loop","label": "Use Loop?","info": "Infinity loop. Duplicate last and first items to get loop illusion.","default": false
        },
		{
          "type": "checkbox",
          "id": "use_slideshow_autoplay",
          "label": "Use autoplay for slider",
          "default": false
        },
        {
          "type": "range",
          "id": "autoplay_slide_time",
          "min": 1,
          "max": 30,
          "step": 0.5,
          "label": "Autoplay Speed in second.",
          "unit": "sec",
          "default": 5
        },        
	    {
          "type": "checkbox",
          "id": "pause_slide_hover",
          "label": "Pause Autoplay On Hover?",
          "info": "Auto-playing will pause when the user hovers over the carousel.",
          "default": true
        },
		 {
          "type": "checkbox",
          "id": "fade_zoom",
          "label": "Fade Zoom",
          "info": "Fade Zoom carousel.",
          "default": true
        },  
        {
          "type": "header",
          "content": "== Prev Next Button, Page Dot Settings"
        },        
        {
          "type": "paragraph",
          "content": "Prev Next Button:"
        },
        {
          "type": "checkbox",
          "id": "nav_enable",
          "label": "Enable Prev Next Button?",
          "info": "Creates and enables previous & next buttons.",
          "default": false
        },
        {
          "type": "select",
          "id": "style_nav",
          "default": "default",
          "options": [
           {
              "value": "default",
              "label": "Default"
           },
           {
              "value": "square",
              "label": "Square"
            }
          ],
          "label": "Arrow style"
        },
        {
          "type": "checkbox",
          "id": "dot_enable",
          "label": "Enable dot?",
          "info": "Creates and enables dot.",
          "default": false
        },
        {
          "type": "select",
          "id": "style_dots",
          "default": "default",
          "options": [
           {
              "value": "default",
              "label": "Default"
           },
          {
          "value": "style1",
          "label": "Style 1"
          },
          {
          "value": "style2",
          "label": "Style 2"
          },
          {
          "value": "style3",
          "label": "Style 3"
          }
          
          ],
          "label": "Dots position"
        },
		{
          "type": "header",
          "content": "== Design Options"
        },
		{
          "type": "select",
          "id": "layout",
          "default": "container",
          "options": [
           {
              "value": "container",
              "label": "Container"
           },
           {
              "value": "full-width",
              "label": "Full Width"
            }
          ],
          "label": "Layout"
        }, 
		{
          "type": "range",
          "id": "margin_top_slidershow",
          "label": "Margin top of this section",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "margin_bottom_slidershow",
          "label": "Margin bottom of this section",
		  "min": 0,
          "max": 100,
          "step": 1,
          "default": 0
        },
        {
        "type": "range",
        "id": "pd_left",
        "label": "Padding left",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
        },
        {
        "type": "range",
        "id": "pd_right",
        "label": "Padding right",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
        },
		{
          "type": "header",
          "content": "== Margin mobile"
        },
		 {
          "type": "color",
          "id": "cl_bg",
          "label": "Background Color",
          "default": "#f5f5f5",
          "info": "only active when you use layout 'Container'"
        },
		{
          "type": "range",
          "id": "margin_top_slidershow_mobile",
          "label": "Margin top of this section",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "margin_bottom_slidershow_mobile",
          "label": "Margin bottom of this section",
		  "min": 0,
          "max": 100,
          "step": 1,
          "default": 0
        },
		{
        "type": "range",
        "id": "pd_left_mobile",
        "label": "Padding left",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
        },
        {
        "type": "range",
        "id": "pd_right_mobile",
        "label": "Padding right",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
        }

	],
	"blocks": [
      {
        "type": "img",
        "name": "Image slide (Parent)",
        "settings": [		
          {
            "type": "image_picker",
            "id": "image_sl",
            "label": "Image",			
			"info": "1170 x 550px .jpg recommended"
          },
		  {
            "type": "image_picker",
            "id": "image_sl_mobile",
            "label": "Image mobile",			
			"info": "480 x 480px .jpg recommended"
          },	
          {
            "type": "url",
            "id": "link_img",
            "label": "Link image",
            "info": "The image becomes clickable."
          },
          {
            "type": "select",
            "id": "open_link",
            "options": [
              {
                "value": "_self",
                "label": "Current window (_self)"
              },
             {
                "value": "_blank",
                "label": "New window (_blank)"
              }
            ],
            "label": "Open link in",
            "default": "_blank"
          },          
          {
             "type": "header",
             "content": "== Caption settings"
           },
          {
            "type": "select",
            "id": "caption_w",
            "default": "2",
            "options": [
             {
                "value": "1",
                "label": "Container"
             },
             {
                "value": "2",
                "label": "Full Width"
              }
            ],
            "label": "Caption Width"
          },          
          {
            "type": "select",
            "id": "h_position",
            "label": "Horizontal Position",
            "default": "center",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          },
			{
            "type": "select",
            "id": "v_position",
            "label": "Vertical Position",
            "default": "middle",
            "options": [
              {
              "value": "top",
              "label": "Top"
              },
              {
              "value": "middle",
              "label": "Middle"
              },
              {
              "value": "bottom",
              "label": "Bottom"
              }
            ]
          },
          {
            "type": "select",
            "id": "txt_align",
            "label": "Text alignment",
            "default": "center",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          },          
          {
            "type": "header",
            "content": "== Color"
          },
          {
            "type": "color",
            "id": "cl_overlay",
            "label": "Overlay",
            "default": "#111"
          },
          {
            "type": "range",
            "id": "cl_opacity",
            "label": "Overlay opacity",
            "default": 100,
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "%"
          }
        ]
      },
      {
      "type": "hd",
      "name": "Heading",
      "settings": [
          {
          "type": "checkbox",
          "id": "hide",
          "label": "Hidden ?",
          "default": false
          },	
          {
            "type": "textarea",
            "id": "title",
            "label": "Heading",
            "default": "Inner beauty out",
			"info":"Insert <br> to line break"
          },         
          {
            "type": "color",
            "id": "color",
            "label": "Color Text",
            "default": "#111"
          },
			{
              "type": "select",
              "id": "text_animate",
              "default": "none",
              "options": [
               {
                  "value": "none",
                  "label": "None"
               },
               {
                  "value": "bounceIn",
                  "label": "bounceIn"
               },
               {
                  "value": "fadeInDown",
                  "label": "fadeInDown"
               },
				{
                  "value": "zoomIn",
                  "label": "zoomIn"
               },
				{
                  "value": "fadeInLeft",
                  "label": "fadeInLeft"
               },
               {
                  "value": "fadeInRight",
                  "label": "fadeInRight"
                }
              ],
              "label": "Animate"
            },
          {
            "type": "range",
            "id": "fw_text",
            "min": 400,
            "max": 800,
            "step": 100,
            "label": "Font weight",
            "default": 600
          },
          {
            "type": "range",
            "id": "fs_text",
            "min": 20,
            "max": 100,
            "step": 1,
            "label": "Font size",
            "unit": "px",
            "default": 60
          },
          {
            "type": "range",
            "id": "lh_text",
            "min": 0,
            "max": 100,
            "step": 1,
            "label": "Line Height",
            "info": "set is '0' use to default",
            "unit": "px",
            "default": 0
          },
          {
            "type": "range",
            "id": "ls_text",
            "min": 0,
            "max": 10,
