
<nav class="navigation pagination" role="navigation">      
  {%comment%}{{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}{%endcomment%}
  <div class="nav-links">

    {% if paginate.previous.is_link %}
    <a href="{{ paginate.previous.url }}#primary" class="prev page-numbers"><span class="icon fa fa-angle-left"> </span> <span class="label">{{ paginate.previous.title | replace: '&laquo;','' }}</span></a>
    {% endif %}
            
    <span class="page-numbers current">{{ 'general.pagination.current_page' | t: current: paginate.current_page, total: paginate.pages }}</span>
     
    {% if paginate.next.is_link %}
    <a href="{{ paginate.next.url }}#primary" class="next page-numbers"><span class="label">{{ paginate.next.title | replace:  '&raquo;', '' }}</span> <span class="icon fa fa-angle-right"> </span></a>
    {% endif %}
  </div>
</nav>
